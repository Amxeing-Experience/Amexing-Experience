<%
/**
 * Department Manager Quotes Management Page
 * Manages department-specific quotes/cotizaciones
 *
 * Layout Structure:
 * - Direct row/column structure (no body-wrapper)
 * - Container-fluid from Flexy Bootstrap
 * - Consistent spacing and alignment
 *
 * Note: DataTables CSS/JS libraries are loaded via controller
 * Department filtering is handled server-side in QuoteController
 */

const currentUserRole = typeof userRole !== 'undefined' ? userRole : 'department_manager';
%>

<!-- Page Header with Breadcrumb -->
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="mb-1 fw-bold">Cotizaciones del Departamento</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item">
                            <a href="/dashboard/department_manager" class="text-decoration-none">
                                <i class="ti ti-home me-1"></i>Dashboard
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            <i class="ti ti-file-invoice me-1"></i>Cotizaciones
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Department Info Alert -->
<div class="row mb-3">
    <div class="col-12">
        <div class="alert alert-info d-flex align-items-center" role="alert">
            <i class="ti ti-info-circle me-2 fs-4"></i>
            <div>
                <strong>Vista Departamental:</strong> Solo puede ver cotizaciones creadas por miembros de su departamento.
            </div>
        </div>
    </div>
</div>

<!-- Quotes Content -->
<div class="row">
    <div class="col-12">
        <%- include('../../organisms/datatable/quotes-table', {
            tableId: 'quotes-table',
            apiEndpoint: '/api/quotes',
            userRole: currentUserRole,
            showActions: true
        }) %>
    </div>
</div>