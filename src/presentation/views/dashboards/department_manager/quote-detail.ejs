<%
/**
 * Department Manager Quote Detail Page
 * Quote viewing and editing with sections (department-level access)
 */

const activeSection = typeof currentSection !== 'undefined' ? currentSection : 'information';
const quoteTitle = isNewQuote ? 'Nueva Cotización' : `Cotización`;

const menuItems = [
    { label: 'Información', icon: 'info-circle', section: 'information', href: `/dashboard/department_manager/quotes/${quoteId}` },
    { label: 'Servicios', icon: 'list', section: 'services', href: `/dashboard/department_manager/quotes/${quoteId}?section=services` },
    { label: 'Resumen', icon: 'calculator', section: 'summary', href: `/dashboard/department_manager/quotes/${quoteId}?section=summary` }
];
%>

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div>
                <h2 class="mb-1 fw-bold" id="quoteTitle">
                    <%= quoteTitle %>
                    <% if (!isNewQuote) { %>
                        <span id="quoteFolioSpan" class="text-muted" style="font-size: 0.9em;">
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        </span>
                    <% } %>
                </h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="/dashboard/department_manager"><i class="ti ti-home me-1"></i>Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/dashboard/department_manager/quotes"><i class="ti ti-file-invoice me-1"></i>Cotizaciones</a></li>
                        <li class="breadcrumb-item active" id="breadcrumbQuoteTitle"><%= quoteTitle %></li>
                    </ol>
                </nav>
            </div>
            <div class="d-flex align-items-center gap-2">
                <a href="/dashboard/department_manager/quotes" class="btn btn-sm btn-outline-secondary">
                    <i class="ti ti-arrow-left me-1"></i>Volver
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Department Access Alert -->
<% if (!isNewQuote) { %>
<div class="row mb-3">
    <div class="col-12">
        <div class="alert alert-warning d-flex align-items-center" role="alert">
            <i class="ti ti-shield-check me-2 fs-4"></i>
            <div>
                <strong>Acceso Departamental:</strong> Solo puede editar cotizaciones creadas por miembros de su departamento.
            </div>
        </div>
    </div>
</div>
<% } %>

<!-- Main Content with spacing from header -->
<div class="row mt-4">
    <div class="col-lg-3 mb-3 mb-lg-0" id="menuColumn">
        <nav class="vertical-menu card border-0 shadow-sm">
            <div class="card-body p-3">
                <div class="menu-header mb-3">
                    <h6 class="text-uppercase text-muted fw-bold menu-title" style="font-size: 0.75rem; letter-spacing: 0.5px; margin-bottom: 0;">MENÚ</h6>
                    <button class="btn btn-sm btn-link text-muted p-0 menu-toggle-btn" id="menuToggle" type="button" aria-label="Colapsar menú">
                        <i class="ti ti-menu-2 fs-5"></i>
                    </button>
                </div>
                <% menuItems.forEach(function(item) {
                    // Disable "Servicios" and "Resumen" sections when creating a new quote
                    const isDisabled = isNewQuote && (item.section === 'services' || item.section === 'summary');
                    const disabledClass = isDisabled ? 'disabled' : '';
                    const tooltipText = isDisabled ? 'Primero debes crear la cotización' : item.label;
                %>
                    <% if (isDisabled) { %>
                        <div class="menu-item <%= disabledClass %> <%= item.section === activeSection ? 'active' : '' %>" data-bs-toggle="tooltip" data-bs-placement="right" title="<%= tooltipText %>">
                            <i class="ti ti-<%= item.icon %> menu-icon"></i><span class="menu-label"><%= item.label %></span>
                            <i class="ti ti-lock ms-auto" style="font-size: 0.875rem; opacity: 0.6;"></i>
                        </div>
                    <% } else { %>
                        <a href="<%= item.href %>" class="menu-item <%= item.section === activeSection ? 'active' : '' %>" data-bs-toggle="tooltip" data-bs-placement="right" title="<%= tooltipText %>">
                            <i class="ti ti-<%= item.icon %> menu-icon"></i><span class="menu-label"><%= item.label %></span>
                        </a>
                    <% } %>
                <% }); %>
            </div>
        </nav>
    </div>

    <div class="col-lg-9" id="contentColumn">
        <% if (activeSection === 'information') { %>
            <%- include('../admin/sections/quote-information') %>
        <% } else if (activeSection === 'services') { %>
            <%- include('../admin/sections/quote-services') %>
        <% } else if (activeSection === 'summary') { %>
            <%- include('../admin/sections/quote-summary') %>
        <% } %>
    </div>
</div>

<style>
/* Vertical Menu Styles */
.vertical-menu {
    position: sticky;
    top: 1rem;
    transition: all 0.3s ease;
}

.vertical-menu.collapsed {
    max-width: 80px;
}

.menu-item {
    display: flex;
    align-items: center;
    padding: 0.75rem 0.5rem;
    margin-bottom: 0.125rem;
    color: #6c757d;
    text-decoration: none;
    border-radius: 0.375rem;
    transition: all 0.2s ease;
    position: relative;
    cursor: pointer;
}

.menu-item:hover {
    background-color: #f8f9fa;
    color: #495057;
    text-decoration: none;
}

.menu-item.active {
    background-color: #e3f2fd;
    color: #1976d2;
    font-weight: 500;
}

.menu-item.disabled {
    opacity: 0.5;
    cursor: not-allowed;
    pointer-events: none;
}

.menu-icon {
    width: 1.25rem;
    flex-shrink: 0;
    margin-right: 0.5rem;
    font-size: 1rem;
}

.menu-label {
    flex: 1;
    font-size: 0.875rem;
    transition: opacity 0.3s ease;
}

.menu-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #e9ecef;
    padding-bottom: 0.75rem;
}

.menu-toggle-btn {
    border: none !important;
    background: none !important;
    box-shadow: none !important;
}

.menu-toggle-btn:focus {
    box-shadow: none !important;
}

/* Responsive behavior */
@media (max-width: 991.98px) {
    .vertical-menu {
        position: static;
        margin-bottom: 1rem;
    }
    
    .menu-header .menu-toggle-btn {
        display: inline-block;
    }
}

@media (min-width: 992px) {
    .menu-header .menu-toggle-btn {
        display: none;
    }
}

/* Collapsed state */
.vertical-menu.collapsed .menu-label {
    opacity: 0;
    width: 0;
    overflow: hidden;
}

.vertical-menu.collapsed .menu-icon {
    margin-right: 0;
}

.vertical-menu.collapsed .menu-header .menu-title {
    opacity: 0;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Menu toggle functionality
    const menuToggle = document.getElementById('menuToggle');
    const verticalMenu = document.querySelector('.vertical-menu');
    const menuColumn = document.getElementById('menuColumn');
    const contentColumn = document.getElementById('contentColumn');

    if (menuToggle && verticalMenu) {
        menuToggle.addEventListener('click', function() {
            verticalMenu.classList.toggle('collapsed');
            
            // Adjust Bootstrap grid classes
            if (verticalMenu.classList.contains('collapsed')) {
                menuColumn.className = 'col-lg-1 mb-3 mb-lg-0';
                contentColumn.className = 'col-lg-11';
            } else {
                menuColumn.className = 'col-lg-3 mb-3 mb-lg-0';
                contentColumn.className = 'col-lg-9';
            }
        });
    }

    // Initialize tooltips
    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });

    // Load quote data if not a new quote
    <% if (!isNewQuote) { %>
        loadQuoteData('<%= quoteId %>');
    <% } %>
});

<% if (!isNewQuote) { %>
async function loadQuoteData(quoteId) {
    try {
        const response = await fetch(`/api/quotes/${quoteId}`, {
            headers: {
                'Authorization': `Bearer ${localStorage.getItem('accessToken') || ''}`
            }
        });

        if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
        }

        const result = await response.json();
        if (result.success && result.data) {
            const quote = result.data;
            // Update page title with folio
            if (quote.folio) {
                document.getElementById('quoteFolioSpan').textContent = `(${quote.folio})`;
                document.getElementById('quoteTitle').innerHTML = `Cotización <span class="text-muted" style="font-size: 0.9em;">(${quote.folio})</span>`;
                document.getElementById('breadcrumbQuoteTitle').textContent = quote.folio;
            }
        }
    } catch (error) {
        console.error('Error loading quote data:', error);
        document.getElementById('quoteFolioSpan').textContent = '(Error cargando datos)';
    }
}
<% } %>
</script>